{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block nav %}{% endblock %}
{% block body %}
<div class="container h-100 d-flex justify-content-center align-items-center">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Administration</h1>
    <label for="inputNom">Nom d'utilisateur</label>
    <input type="text" value="{{ last_username }}" name="nom" id="inputNom" class="form-control" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <br>

    <button class="btn btn-primary" type="submit">
        Valider
    </button>
</form>
{% endblock %}